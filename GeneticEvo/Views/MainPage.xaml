<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeneticEvo.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Start" >

            <StackLayout>
                <Label
                x:Name="lblAno"
                Text=""
                FontSize="32"
                HorizontalOptions="CenterAndExpand" />

                <Label
                x:Name="lblIndividuos"
                Text=""
                FontSize="32"
                HorizontalOptions="CenterAndExpand" />
            </StackLayout>

            <HorizontalStackLayout HorizontalOptions="Center">
                <Button
                x:Name="ReiniciarBtn"
                Text="Reiniciar"
                Clicked="OnReiniciarClicked"
                HorizontalOptions="Center" />

                <Button
                x:Name="CounterBtn"
                Text="Avançar Ano"
                Clicked="AvancarAnoClicked"
                HorizontalOptions="Center"
                Margin="5,0,5,0"/>
            </HorizontalStackLayout>

            <VerticalStackLayout
                x:Name="StackVertical"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
