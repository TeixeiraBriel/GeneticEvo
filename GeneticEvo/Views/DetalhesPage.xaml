<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeneticEvo.DetalhesPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="5"
            Spacing="15"
            VerticalOptions="Start">

            <HorizontalStackLayout 
                Padding="5"
                Spacing="5"
                HorizontalOptions="CenterAndExpand">
                <Button Text="Ant." Clicked="EspecieAnt"/>
                <Button Text="Prox." Clicked="EspecieProx"/>
            </HorizontalStackLayout>

            <Label
                x:Name="lblNomeEspecie"
                Text="Teste"
                FontSize="32"
                HorizontalOptions="Center" />

            <VerticalStackLayout 
                Padding="15"
                BackgroundColor="LightGrey">
                <Label Text="Caracteristicas:"/>
                <VerticalStackLayout 
                    Spacing="5"
                    x:Name="PanelCaracteristicas">
                </VerticalStackLayout>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
