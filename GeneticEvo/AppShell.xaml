<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GeneticEvo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GeneticEvo"
    Shell.FlyoutBehavior="Disabled">

    <TabBar x:Name="TabBar">
        <Tab Title="Home">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage"/>
        </Tab>
        <Tab Title="Detalhes">
            <ShellContent
                Title="Detalhes"
                ContentTemplate="{DataTemplate local:DetalhesPage}"
                Route="DetalhesPage"/>
        </Tab>
        <Tab Title="Mais">
            <ShellContent
                Title="Mais"
                ContentTemplate="{DataTemplate local:OpcoesPage}"
                Route="NovoIndividuoPage"/>
        </Tab>
    </TabBar>


</Shell>
